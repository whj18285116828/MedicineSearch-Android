<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background">
    
    <LinearLayout 
        android:layout_width="150dip"
        android:layout_height="80dip"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <View 
        	android:id="@+id/welcome_block_1"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="#FF33CCFF"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_2"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="#FF00CCCC"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_3"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="#FF66CC00"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_4"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="#FFFF9900"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_5"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="#FFFF3333"
        	android:visibility="gone"/>
        <View 
        	android:id="@+id/welcome_block_6"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="#FFFF3366"
        	android:visibility="gone"/>
    </LinearLayout>

	<TextView 
	    android:id="@+id/welcome_enjoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
	
    <TextView 
        android:id="@+id/welcome_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_enjoy"
        android:layout_marginBottom="33dp"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textColor="#FF22AADD"/>

</RelativeLayout>