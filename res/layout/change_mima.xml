<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/reviseuersinfo_title_RelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/fragment_bottom_normal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/tishi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="原密码:"
            android:textSize="20dp" />
"

        <EditText
            android:id="@+id/jiu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/tishi1"
            android:background="@drawable/frame_little_black"
            android:padding="5dp"
            android:text="输入新昵称"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/tishi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tishi1"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tishi1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="新密码:"
            android:textSize="20dp" />
"

        <EditText
            android:id="@+id/xin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/jiu"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/tishi2"
            android:background="@drawable/frame_little_black"
            android:padding="5dp"
            android:text="输入新昵称"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/tishi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tishi2"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tishi2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="确认新密码:"
            android:textSize="20dp" />
"

        <EditText
            android:id="@+id/zaici"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/xin"
            android:layout_below="@id/tishi3"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/frame_little_black"
            android:padding="5dp"
            android:text="输入新昵称"
            android:textColor="@color/black"
            android:textSize="28dp" />
        
        <Button
            android:id="@+id/mimabutton"
            android:layout_width="120dp"
            android:layout_below="@id/zaici"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_background"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/qr"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>