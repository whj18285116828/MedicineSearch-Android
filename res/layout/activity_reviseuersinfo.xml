<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/reviseuersinfo_title_RelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/fragment_bottom_normal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="個人信息"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_change_uersinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame_little_black"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/gerenxinxi_toux"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/selector_background" >

            <TextView
                android:id="@+id/activity_xiugaiwo_change_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/tx"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/reviseuers_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_toright" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/reviseuers_icon"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/reviseuers_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_toright" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gerenxinxi_zhangh"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/selector_background" >

            <TextView
                android:id="@+id/activity_xiugaiwo_change_zh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/zh"
                android:textColor="@color/black"
                android:textSize="20dp" />

           

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="@string/zhanghao"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gerenxinxi_nic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_background" >

            <TextView
                android:id="@+id/activity_xiugaiwo_change_nc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/nc"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/reviseuers_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_toright" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/reviseuers_icon1"
                android:text="@string/nicheng"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gerenxinxi_xingb"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_background" >

            <TextView
                android:id="@+id/activity_xiugaiwo_change_xb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/xb"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/reviseuers_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_toright" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/reviseuers_icon3"
                android:text="@string/man"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gerenxinxi_mim"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_background" >

            <TextView
                android:id="@+id/activity_xiugaiwo_change_xb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/xgmm"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/reviseuers_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_toright" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector_background"
        android:gravity="center"
        android:text="@string/tj"
        android:textColor="@color/black"
        android:textSize="20dp" />

</LinearLayout>