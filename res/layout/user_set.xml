<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/reviseuersinfo_title_RelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/fragment_bottom_normal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <RadioGroup
            android:id="@+id/my_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <RadioButton
            android:id="@+id/radio_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:checked="true"
            android:text="男"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/radio_man"
            android:layout_marginRight="45dp"
            android:text="女"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_man"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="qq账号："
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/qqhao"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/qq"
            android:layout_margin="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/frame_little_black"
            android:padding="5dp"
            android:text="输入新昵称"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/youxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qqhao"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="邮箱账号："
            android:textColor="@color/black"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/e_mile"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/youxiang"
            android:layout_margin="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/frame_little_black"
            android:padding="5dp"
            android:text="输入新昵称"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/setbutton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/e_mile"
            android:layout_below="@+id/e_mile"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_background"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/qr"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>