<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/reviseuersinfo_title_RelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/fragment_bottom_normal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改昵称"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <EditText
            android:id="@+id/shurukuang"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/frame_little_black"
            android:padding="5dp"
            android:text="输入新昵称"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/zuobutton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/shurukuang"
            android:layout_below="@+id/shurukuang"
            android:background="@drawable/selector_background"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/qx"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/youbutton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/shurukuang"
            android:layout_below="@+id/shurukuang"
            android:background="@drawable/selector_background"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/qr"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>